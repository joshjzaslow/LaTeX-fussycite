%---- FOR AUTHOR AS Dominant Recurrent Data
%---- /Define \authorcite Command ----
        \newcommand{\citeau}[4][Display]{%Display, Author, Year, Page
            \increase{citenumber}%
            \increase{lastcitenumber}%
            \label{\arabic{citenumber}}%
            \ifthenelse{\equal{\pageref{\arabic{citenumber}}}{\pageref{\arabic{lastcitenumber}}}}% Condition
                {}% Then
                {\lastcite{}}% Else (Reset Last Citation Information to NULL
            \ifthenelse{\equal{#1}{Display}}%           Condition
                {}%             Then
                {\lastcite{\rm{\MakeUppercase{AUTHOR{#2}-{#3}}}}}%  Else
            \ifthenelse{\equal{\rm{\MakeUppercase{AUTHOR{#2}-{#3}}}}{\@lastcite}}%  Condition
                {(#4)}%                 Then
                {(#2, #4)}% Else
            \nocite{\MakeUppercase{#2-#3}}%
            \lastcite{\rm{\MakeUppercase{AUTHOR{#2}-{#3}}}}%            Update Recent
            }

